<h2> Contact Us </h2>


<%= form_for @contact_form do |f| %>
 <div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
 </div>
 <div>
  <%= f.label :email %><br>
  <%= f.email_field :email %>
</div>
<div>
  <%= f.label :message %><br>
  <%= f.text_area :message, :cols => "80", :rows => "20", :as => :text %>
  </div>
  <%= f.button :Submit, class: 'btn btn-primary' %>
<% end %>

