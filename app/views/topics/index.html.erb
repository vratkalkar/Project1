<% if signed_in? %>

<h1>Wiki's by Topic</h1>

<div class="row">
  <div class="col-md-8">
    <% @topic.each do |topic| %>
     <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to topic.name, topic %>
        </h4>
      </div>
    </div>
    <% end %>
  </div>
</div>


<%= link_to "Add Topic", new_topic_path, class:'btn btn-danger btn-lg active' %>

<% else %>

 <h2>Please sign in to get started!</h2>
 <%= link_to "Sign in", new_user_session_path %>

<% end %>